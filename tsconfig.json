{
	"allowJs": true,
	"compilerOptions": {
		"target": "ES6",
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"strict": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"sourceMap": true,
		"lib": [
			"es5", "es2015.collection", "es2015.promise", "dom", "es2016.array.include"
		]
	},
	"include": [
		"api/**/*.js",
		"helpers/**/*.js",
		"logic/**/*.js",
		"schema/**/*.js",
		"sql/**/*.js",
		"tasks/**/*.js",
		"test/**/*.js"
	],
	"exclude": ["node_modules"],
	"typeAcquisition": {
		"include": [
			"vue",
			"vuex",
			"vue-router",
			"axios"
		]
	}
}
